{
  "name": "applicationator",
  "version": "1.0.0",
  "description": "Job application automation app",
  "private": true,
  "workspaces": [
    "frontend",
    "backend"
  ],
  "scripts": {
    "dev": "concurrently --raw -n \"backend,frontend\" -c \"blue,green\" \"npm run dev:backend\" \"npm run dev:frontend\"",
	"dev:frontend": "cd frontend && npm run dev",
	"dev:backend": "scripts\\dev-backend.cmd",
    "build": "npm run build:frontend && npm run build:backend",
    "build:frontend": "npm --prefix frontend run build",
    "build:backend": "npm --prefix backend run build",
    "install:all": "npm install && npm install --prefix frontend && npm install --prefix backend",
    "profiles:export": "node scripts/profiles-export.mjs",
    "profiles:import": "node scripts/profiles-import.mjs"
  },
  "devDependencies": {
    "concurrently": "^8.2.2"
  }
}


